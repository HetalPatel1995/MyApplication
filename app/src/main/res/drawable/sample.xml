<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@drawable/imgbg"/>
    <item>
        <bitmap android:src="@drawable/imgbackground"
            android:gravity="center" android:alpha="0.1"/>
    </item>

    <item android:top="400dp"
        android:bottom="-400dp"
        android:left="50dp"
        android:right="-300dp">
        <rotate
            android:fromDegrees="-20"
            android:pivotX="0%"
            android:pivotY="100%">
            <shape
                android:shape="rectangle">
                <solid
                    android:color="@color/white"/>
            </shape>
        </rotate>
    </item>
</layer-list>